<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/vg_item"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <!--这里有个bug你们发现没-->
        <!--这种动态设值的控件里，所有默认的值都不要写，比如这个src要么用tools要么就不要写-->
        <ImageView
            android:id="@+id/iv_img"
            style="@style/GRID_PICTURE_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/img_music1" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:alpha="0.9"
            android:drawableLeft="@mipmap/ic_like"
            android:drawablePadding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="9966"
            android:textColor="#eeeeee"
            android:textSize="12sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!--    skinTypeface="@string/typeface"-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="11dp"
        android:text="Hello，大家好我是周杰伦，这是我的新专辑十一月的肖邦~"
        android:textColor="#444444"
        android:textSize="12sp" />

</LinearLayout>