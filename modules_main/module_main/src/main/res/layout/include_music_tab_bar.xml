<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:minHeight="46dp">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_actionbar_bg_selector"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_menu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_tab1"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="首页"
            android:textColor="@color/tab_color_selected"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_home_tab2"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="广场"
            android:textColor="@color/tab_color_default"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_home_tab3"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="视频"
            android:textColor="@color/tab_color_default"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_home_tab4"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="我的"
            android:textColor="@color/tab_color_default"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/btn_actionbar_bg_selector"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_home_top_search" />

</FrameLayout>